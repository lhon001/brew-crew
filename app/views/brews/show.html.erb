<h2><%= @brew.blend_name %></h2>

<ul>
  <li>Origin: <%= @brew.origin %></li>
  <li>Notes: <%= @brew.notes %></li>
  <li>Strength: <%= @brew.strength %></li>
</ul>

<ul>
  <% @brew.customers.each do |customer| %>
    <li><%= link_to customer.name, customer_path(customer) %></li>
  <% end %>
</ul>

<%= link_to 'Edit this Coffee', edit_brew_path(@brew) %>

<%= link_to "DELETE THIS COFFEE", @brew, method: :delete, data: { confirm: "Really?" } %>

